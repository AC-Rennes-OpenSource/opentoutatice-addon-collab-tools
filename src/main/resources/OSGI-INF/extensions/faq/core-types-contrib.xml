<?xml version="1.0"?>

<component name="fr.toutatice.ecm.platform.core.faq.doctypes">

	<require>org.nuxeo.ecm.core.schema.TypeService</require>
	<require>fr.toutatice.ecm.platform.core.schemas</require>
	<require>fr.toutatice.ecm.platform.core.doctypes</require>

	<extension target="org.nuxeo.ecm.core.schema.TypeService"
		point="doctype">

		<doctype name="FaqFolder" extends="Document">
			<schema name="common" />
			<schema name="dublincore" />
			<schema name="faqfolder" />
			<facet name="Folderish" />
			<facet name="SpaceContent" />
			<facet name="SpaceNavigationItem" />
		</doctype>

		<doctype name="Question" extends="Document">
			<schema name="question" />
			<schema name="dublincore" />
			<schema name="common" />
			<schema name="files" />
			<schema name="note" />
			<facet name="SpaceContent" />
			<facet name="Commentable" />
			<facet name="Versionable" />
			<facet name="Publishable" />
			<facet name="HasRelatedText" />
		</doctype>

	</extension>
	
	<extension target="org.nuxeo.ecm.platform.types.TypeService"
		point="types">
		
		<type id="PortalSite">
			<subtypes>
				<type>FaqFolder</type>
			</subtypes>
		</type>
		<type id="PortalPage">
			<subtypes>
				<type>FaqFolder</type>
			</subtypes>
		</type>
		<type id="Workspace">
			<subtypes>
				<type>FaqFolder</type>
			</subtypes>
		</type>
		<type id="Folder">
			<subtypes>
				<type>FaqFolder</type>
			</subtypes>
		</type>		
		<type id="OrderedFolder">
			<subtypes>
				<type>FaqFolder</type>
			</subtypes>
		</type>
		
		<type id="FaqFolder">
			<subtypes>
				<type>Question</type>
			</subtypes>
		</type>
		
	</extension>

</component>
