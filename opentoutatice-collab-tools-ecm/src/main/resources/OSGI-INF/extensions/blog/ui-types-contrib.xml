<?xml version="1.0"?>

<component name="fr.toutatice.ecm.platform.web.ui.blog.types">

	<require>org.nuxeo.ecm.platform.types.TypeService</require>

	<extension target="org.nuxeo.ecm.platform.types.TypeService"
		point="types">

		<type id="BlogSite">
			<label>Blog</label>
			<category>Collaborative</category>
			<icon>/img/blog_folder.png</icon>
			<bigIcon>/img/blogsite_100.png</bigIcon>
			<description></description>
			<default-view>view_documents</default-view>
			<subtypes>
				<type>BlogPost</type>
				<type>ContextualLink</type>
			</subtypes>
			<layouts mode="create">
				<layout>layout@BlogSite</layout>
			</layouts>
			<layouts mode="edit">
				<layout>layout@BlogSite</layout>
			</layouts>
			<layouts mode="view">
				<layout>layout@BlogSite</layout>
			</layouts>
			<contentViews category="content">
				<contentView showInExportView="false">cv_ContentReadNWrite_NIPS
				</contentView>
			</contentViews>						
			<contentViews category="CVTAB@StudioOnlineDocs">
				<contentView showInExportView="false">cv_ContentOnlineList</contentView>
			</contentViews>
			<contentViews category="CVTAB@StudioWorkingDocs">
				<contentView showInExportView="false">cv_ContentReadNWrite</contentView>
			</contentViews>			
			<contentViews category="trash_content">
				<contentView showInExportView="false">document_trash_content
				</contentView>
			</contentViews>
		</type>

		<type id="BlogPost">
			<label>blog post</label>
			<category>SimpleDocument</category>
			<icon>/img/blogpage.png</icon>
			<bigIcon>/img/blogpage_100.png</bigIcon>
			<icon-expanded>/icons/blogpage.png</icon-expanded>
			<description></description>
			<default-view>view_documents</default-view>
			<layouts mode="create">
				<layout>layout@BlogPost</layout>
			</layouts>
			<layouts mode="edit">
				<layout>layout@BlogPost</layout>
			</layouts>
			<!-- <layouts mode="view">
				<layout>layout@BlogPost-view</layout>
			</layouts> -->
			<layouts mode="view"/>
		</type>

	</extension>


</component>